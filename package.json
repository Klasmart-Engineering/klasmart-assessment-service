{
  "name": "assessment-service",
  "description": "Assessment Service",
  "author": "KidsLoop Ltd",
  "license": "ISC",
  "version": "1.9.5",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint \"{src,tests}/**/*.ts\" --ext .ts",
    "lint-and-fix": "eslint \"{src,tests}/**/*.ts\" --ext .ts --fix",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "start": "ts-node -r dotenv/config src/index.ts",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:compile && npm run build:copy-assets",
    "build:compile": "tsc -p tsconfig-build.json --outDir ./dist",
    "build:copy-assets": "cp -R ./views ./dist/views && cp README.md ./dist && cp CHANGELOG.md ./dist",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "release": "standard-version --no-verify",
    "test": "cross-env NODE_ENV=test npm run test:unit && npm run test:integration",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --report-dir ./test-results/coverage.lcov npm run test",
    "test:codecov": "cross-env NODE_ENV=test nyc --reporter=cobertura --report-dir ./test-results/coverage.xml npm test && codecov",
    "test:unit": "cross-env NODE_ENV=test mocha --require ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "cross-env NODE_ENV=test mocha --require ts-node/register tests/integration/**/*.test.ts --timeout 8000",
    "prepare": "husky install || exit 0",
    "pre-commit": "lint-staged",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/cz-commitlint": "^15.0.0",
    "@fluffy-spoon/substitute": "^2.0.0-beta.0",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-types": "^3.4.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gql-query-builder": "^3.5.5",
    "husky": "^7.0.1",
    "inquirer": "^8.1.2",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.3.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.43.0",
    "@aws-sdk/util-dynamodb": "^3.43.0",
    "@newrelic/apollo-server-plugin": "^1.0.2",
    "apollo-server-express": "^3.5.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-request": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "jstransformer-highlight": "^2.0.0",
    "jstransformer-markdown-it": "^2.1.0",
    "kidsloop-nodejs-logger": "bitbucket:calmisland/kidsloop-nodejs-logger#v0.2.14",
    "kidsloop-token-validation": "bitbucket:calmisland/kidsloop-token-validation",
    "mysql2": "^2.2.5",
    "newrelic": "^8.4.0",
    "node-fetch": "^2.6.6",
    "pg": "^8.6.0",
    "pug": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.32",
    "typeorm-typedi-extensions": "^0.4.1",
    "uuid": "^8.3.2"
  }
}
