{
  "name": "assessment-service",
  "description": "Assessment Service",
  "author": "KidsLoop Ltd",
  "license": "ISC",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc **/*.ts --write",
    "start": "ts-node src/index.ts",
    "build": "tsc -p . --outDir ./dist",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:coverage": "nyc --reporter=lcov --report-dir ./test-results/coverage.lcov npm run test",
    "test:codecov": "nyc --reporter=cobertura --report-dir ./test-results/coverage.xml npm test && codecov",
    "test:unit": "mocha --require ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "mocha --require ts-node/register tests/integration/**/*.test.ts --timeout 8000",
    "test:single": "mocha --require ts-node/register --grep \"tests.unit.stub\" tests/**/*.test.ts",
    "test:file": "mocha --require ts-node/register tests/integration/roomResolver.room.test.ts --timeout 8000"
  },
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.208.0",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/graphql-upload": "^8.0.5",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "gql-query-builder": "^3.5.5",
    "graphql-upload": "^12.0.0",
    "mocha": "^8.4.0",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "apollo-server-express": "^2.23.0",
    "aws-sdk": "^2.899.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.2.5",
    "node-fetch": "^2.6.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.32",
    "typeorm-typedi-extensions": "^0.4.1",
    "uuid": "^8.3.2"
  }
}
